@import "./styles/iconfont.wxss";

/*
最外层的标签是page
内层有 view text swiper swiper-item
image navigator
*/
page, view, text, swiper, swiper-item, image, navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/*
主题颜色 通过变量来实现
1.less 中 存在变量
2.原生的css和wxss也支持变量
*/
page {
  /*定义主题颜色*/
  --themeColor:#eb4450;
  /*定义统一字体大小
  1px = 2rpx
  */
  font-size: 28rpx;
}

image{
  width: 100%;
}
